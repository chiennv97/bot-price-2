# Environment Variables for Thala Monitor Bot

# Discord Configuration
# Tạo webhook tại Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Telegram Configuration
# Tạo bot với @BotFather và lấy token
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
# Chat ID để gửi tin nhắn (có thể là user ID hoặc group ID)
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# Vercel Configuration (tự động được set bởi Vercel)
VERCEL_URL=your-app-name.vercel.app

# Optional: API Rate Limiting
# Thời gian delay giữa các lần gọi API (milliseconds)
API_DELAY=1000

# Optional: Notification Settings
# Chỉ gửi thông báo khi có thay đổi đáng kể
ENABLE_CHANGE_DETECTION=true
# Ngưỡng thay đổi để gửi thông báo (%)
CHANGE_THRESHOLD=5
